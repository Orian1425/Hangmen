<Window x:Class="Hangmen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangmen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <UniformGrid Name="lettersGrid" Rows="2" FlowDirection="LeftToRight" 
                     Grid.Row="0" Margin="300,160,50,20"/>
        <UniformGrid Name ="wordGrid" Rows="1" FlowDirection="LeftToRight" 
                     Grid.Row="0" Margin="300,20,50,190"/>

        <Grid Grid.Row="1">
            <Button Height="60" Width="80" Content="New Word" FontSize="15" Margin="350,0,0,0" Click="New_Word"/>
        </Grid>
    </Grid>
</Window>
